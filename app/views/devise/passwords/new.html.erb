<head>
  <!-- Font & Icon -->
  <link rel="stylesheet" href="../../../font/inter/inter.min.css">
  <link href="assets/plugins/material-design-icons-iconfont/material-design-icons.min.css" rel="stylesheet">
  <!-- Plugins -->
  <!-- CSS plugins goes here -->
  <!-- Main Style -->
  <link rel="stylesheet" href="assets/plugins/simplebar/simplebar.min.css">
  <link rel="stylesheet" href="/assets/css/style.min.css" id="main-css">
  <link rel="stylesheet" href="/assets/css/sidebar-gray.min.css" id="theme-css"> <!-- options: blue,cyan,dark,gray,green,pink,purple,red,royal,ash,crimson,namn,frost -->
</head>

<body class="login-page">

  <div class="container mt-5">
    <div class="row">
      <div class="col-lg-7 col-xl-8 d-none d-lg-block">
        <img src="/assets/img/forgot-password.svg" alt="" class="img-fluid w-100">
      </div>
      <div class="col-lg-5 col-xl-4 d-flex justify-content-center align-items-center">
        <div class="card mb-3">
          <div class="card-body p-4">
            <h3><%= "パスワードを再設定する" %></h3>
            <p class="font-weight-light text-secondary">メールアドレスを入力してください</p>
            <hr>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group">
                <span class="input-icon">
                  <i class="material-icons">mail_outline</i>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "resetEmailInput", placeholder: "", autocomplete: "off", required: "" %>
                </span>
              </div>
              <div class="actions">
                <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-danger btn-block" %>
              </div>
            <% end %>
            <hr>
            <%= link_to "ログインに戻る", new_user_session_path, class: "btn btn-light has-icon btn-sm" %><br />
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Plugins -->
  <!-- JS plugins goes here -->

</body>